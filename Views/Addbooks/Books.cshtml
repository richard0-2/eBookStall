@model IEnumerable<Book>

@{
    ViewData["Title"] ="List of Books";
}

<div class="row">
    <div class="col-md-8-offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ImageURL)</th>
                    <th>@Html.DisplayNameFor(model => model.BookName)</th>
                    <th>@Html.DisplayNameFor(model => model.PublisherName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                    <td class="align-middle">
                     <img class="rounded-circle" src="@item.ImageURL" alt="@item.BookName" 
                     style="max-width: 150px";/>
                    </td>
                    <td class="align=middle">
                        @Html.DisplayFor(modelItem => item.BookName)
                    </td>
                    <td class="align=middle">
                        @Html.DisplayFor(modelItem => item.PublisherName)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info"><i class="bi bi-pencil-eye"></i>Details</a> |
                        <a class="btn btn-danger text-white"><i class="bi bi-pencil-trash"></i>Delete</a> 
                    </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>